<odoo>
    <record id="view_shipday_config_form" model="ir.ui.view">
        <field name="name">shipday.config.form</field>
        <field name="model">shipday.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="api_key"/>
                        <field name="endpoint_url"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>